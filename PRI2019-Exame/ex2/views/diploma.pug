extends layout

block content
    .w3-container
        .w3-card-4        
            header.w3-container.w3-teal
                h3 Diploma Legislativo
            .w3-container
                table.w3-table-all
                    tr
                        th Data
                        th Sumario
                        th Link
                        th Estado
                        th Entidades
                    tr
                        td= diploma.data
                        td= diploma.sumario
                        td
                            a(href=diploma.link)= diploma.link
                        td= diploma.estado
                        td
                            each entidade in diploma.entidades
                                a(href=" http://clav.dglab.gov.pt/tipologias/"+entidade.id)= entidade.sigla
                header.w3-container.w3-teal
                  h4 Processos
                table.w3-table-all
                    tr
                        th Processos
                    each processo in processos
                        tr
                            td
                                a(href=" http://clav.dglab.gov.pt/pedidos/"+processo.codigo)= processo.codigo
                            td= processo.titulo
                    else
                        td Diploma sem processos...
            footer.w3-container.w3-teal 
                address Gerado por CLAV: Classificação e Avaliação da Informação Pública
                a(href='/') Voltar à página anterior