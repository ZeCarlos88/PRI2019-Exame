extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 CLAV: Classificação e Avaliação da Informação Pública
            .w3-container  
            table.w3-table-all
                thead
                    tr
                        th Data
                        th Tipo
                        th Número
                        th Sumário
                        th
                tbody
                  each diploma in listadiplomas
                        tr
                            td= diploma.data
                            td= diploma.tipo
                            td= diploma.numero
                            td= diploma.sumario
                            th
                              form(method="GET" action="/diplomas/" + diploma.id)
                                        input(type='submit' value="VISITAR")

            footer.w3-container.w3-black
                address Gerado por CLAV: Classificação e Avaliação da Informação Pública

